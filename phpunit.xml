<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Opoka Test Suite">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
    <php>
        <const name="PHP_SERWER_HOST" value="localhost" />
        <const name="PHP_SERWER_PORT" value="1349" />
        <const name="PHP_SERWER_KATALOG_ROOT" value="strona_testowa" />
        <const name="SELENIUM_SERWER_PORT" value="1452" />
    </php>
</phpunit>
